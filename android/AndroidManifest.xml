<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boidzgame"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <!-- For debug traceview -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen" >
        <activity
            android:name=".activity.HomeScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LevelSelectScreenActivity" >
        </activity>
        <activity
            android:name=".activity.level.LevelActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name=".activity.LevelMenuActivity" />
        <activity android:name=".activity.WinActivity" />
        <activity android:name=".activity.HighscoresActivity" />
        <activity android:name=".activity.SettingsActivity" />
    </application>

</manifest>